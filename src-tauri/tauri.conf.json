{
  "$schema": "https://schema.tauri.app/config/2",
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/whatsmybitrate"
    ],
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "-",
      "entitlements": "Entitlements.plist"
    },
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon_32.png",
      "icons/icon_128.png",
      "icons/icon_256.png"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "productName": "Keson Spectral Improver",
  "mainBinaryName": "Keson Spectral Improver",
  "version": "0.9.7",
  "identifier": "com.keson.spectralimprover",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1MDVCMTY0NzUyNjJCMkUKUldRdUt5WjFaTEVGbGFJVjhSRDhUcEJDQ2U3QmgrT2pBUWZMMEhHOS9lUmtOQWZDbkRuQStHa0UK",
      "endpoints": [
        "https://github.com/Cartasiane/keson-spectral-improver-gui/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APP/**", "$RESOURCE/**", "$TEMP/**", "$HOME/**"]
      }
    },
    "windows": [
      {
        "title": "Keson Spectral Improver",
        "width": 1100,
        "height": 780,
        "useHttpsScheme": false,
        "devtools": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ]
  }
}
