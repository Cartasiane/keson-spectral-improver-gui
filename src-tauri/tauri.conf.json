{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "Keson Spectral Improver",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "security": {
      "assetProtocol": {
        "scope": [
          "$APP/**",
          "$RESOURCE/**",
          "$TEMP/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.keson.spectralimprover",
      "icon": [],
      "resources": [
        "../vendor/whatsmybitrate"
      ]
    },
    "windows": [
      {
        "title": "Keson Spectral Improver",
        "width": 1100,
        "height": 780
      }
    ],
    "allowlist": {
      "all": true
    }
  }
}
