{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "process:default",
    "global-shortcut:default",
    "shell:allow-open",
    "shell:allow-spawn",
    "opener:default",
    "opener:allow-open-path",
    "opener:allow-reveal-item-in-dir",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/ffprobe",
          "sidecar": true,
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "whatsmybitrate",
          "cmd": "whatsmybitrate",
          "args": true
        }
      ]
    }
  ]
}